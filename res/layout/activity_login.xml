<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_cloud"
    android:orientation="vertical" >
    
    <ImageView
        android:id="@+id/hrm_logo"
        android:layout_weight="2.5"
        android:layout_width="match_parent"
    	android:layout_height="0dp"
    	android:layout_gravity="center"
        android:contentDescription="@string/desc_logo_hrm"
        android:src="@drawable/logo_hrm" />

    <TextView
        android:id="@+id/label_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="@string/label_login_account"
        android:textSize="@dimen/title_txt_size" />
    
    <EditText
        android:id="@+id/input_account"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:inputType="text" />
    
    <TextView
        android:id="@+id/label_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/label_login_mima"
        android:textSize="@dimen/title_txt_size" />
    
    <EditText
        android:id="@+id/input_password"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword" />
    
    <LinearLayout 
        android:layout_width="wrap_content"
    	android:layout_height="0dp"
    	android:layout_weight="1"
        android:orientation="horizontal">
        
        <CheckBox 
	        android:id="@+id/check_remember"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" />
    
	    <TextView
	        android:id="@+id/label_remember"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/label_login_remember"
	        android:textSize="@dimen/title_txt_size" />
        
    </LinearLayout>
    

</LinearLayout>
